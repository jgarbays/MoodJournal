<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoodJournal.Views.Ajustes"
             BackgroundColor="{StaticResource FondoClaroAmarillento}">

    <Grid RowDefinitions="Auto, *">

        <StackLayout Grid.Row="0"
                     Orientation="Vertical"
                     Padding="24, 24, 24, 8">

            <StackLayout Orientation="Horizontal"
                         VerticalOptions="Center"
                         Margin="0, 0, 0, 16">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackTapped" />
                </StackLayout.GestureRecognizers>

                <Label Text="â¬… atrÃ¡s"
                       FontSize="20"
                       TextColor="{StaticResource ColorPrincipalRosa}"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       Margin="8, 0, 0, 0" />
            </StackLayout>

            <Label Text="ajustes"
                   FontSize="32"
                   TextColor="{StaticResource ColorPrincipalRosa}"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   Margin="0, 8, 0, 16" />
        </StackLayout>

        <StackLayout Grid.Row="1"
                     Orientation="Vertical"
                     Padding="40, 0, 40, 16"
                     Spacing="25">

            <Grid ColumnDefinitions="Auto, *, Auto" VerticalOptions="Center">
                <Label Grid.Column="0" Text="âš ï¸" FontSize="24" VerticalOptions="Center" Margin="0, 0, 15, 0"/>

                <StackLayout Grid.Column="1">
                    <Label Text="recordatorio" FontSize="18" TextColor="{StaticResource TextoOscuro}"/>

                    <Button x:Name="ReminderTimeLabel"
            Text="{Binding SelectedReminderTimeText}"  
           
            BackgroundColor="SpringGreen"
            TextColor="{StaticResource TextoOscuroSuave}"
            FontSize="14"
            Padding="0"
            HorizontalOptions="Start" 
                        Clicked="OnReminderTimeTapped"
       
        />
                </StackLayout>

                <TimePicker x:Name="HiddenTimePicker"
            x:FieldModifier="public"
            Opacity="0"                 WidthRequest="10" 
            HeightRequest="10" 
            Format="hh:mm tt"
            PropertyChanged="OnTimePickerPropertyChanged" 
            Grid.ColumnSpan="3"
            HorizontalOptions="Start"
            VerticalOptions="Start" />

                <Switch Grid.Column="2" 
                        IsToggled="True" 
                        x:Name="ReminderSwitch"
                        x:FieldModifier="public"
                        Toggled="OnReminderToggled" 
                        VerticalOptions="Center" 
                        OnColor="{StaticResource ColorPrincipalRosa}"/>
            </Grid>

            <Grid ColumnDefinitions="Auto, *, Auto" VerticalOptions="Center">
                <Label Grid.Column="0" Text="ðŸ“…" FontSize="24" VerticalOptions="Center" Margin="0, 0, 15, 0"/>
                <StackLayout Grid.Column="1">
                    <Label Text="fecha y hora" FontSize="18" TextColor="{StaticResource TextoOscuro}"/>
                    <Label Text="12 feb | 19:15 pm" FontSize="14" TextColor="{StaticResource TextoOscuroSuave}"/>
                   
                </StackLayout>
            </Grid>

            <Button Text="borrar cuenta"
                    TextColor="White"
                    FontSize="16"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    CornerRadius="25"
                    Padding="30, 0"
                    BackgroundColor="{StaticResource ColorPrincipalRosa}"
                    Margin="0, 50, 0, 0" />

        </StackLayout>
    </Grid>
</ContentPage>